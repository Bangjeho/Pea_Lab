import java.util.HashMap;
import java.util.Scanner;

public class Shpping {
	static int charge;
	
	public static void main(String[] args) {
		HashMap<String, Integer> hsShp = new HashMap<String, Integer>(); 
		
		hsShp.put("책", 5500);
		hsShp.put("케이크", 2500);
		hsShp.put("쿠키", 4500);
		
		System.out.println("현재 10000원 가지고 있네영");
		Scanner scan = new Scanner(System.in);
		System.out.println("메뉴출력");
		String s;
		int n;
		while(true){
			System.out.print("어떤 물품 살랭?");
			s = scan.next();
			if(s.equals("0")) {
				break;
			}
			System.out.println("몇개살랭?");
			n = scan.nextInt();	
			
		}
	}
	
	public static int shopping(HashMap<String, Integer> hsShp) {
		
		return charge;
	}

}
